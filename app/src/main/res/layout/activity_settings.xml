<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <variable name="callback" type="io.digibyte.presenter.activities.SettingsCallback"/>
        <variable name="adapter" type="io.digibyte.presenter.activities.settings.SettingsActivity.SettingsListAdapter"/>
    </data>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_intro_set_pit"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="io.digibyte.presenter.activities.SetPinActivity">

        <io.digibyte.presenter.customviews.BRText
            app:customTFont="CircularPro-Bold.otf"
            android:id="@+id/title"
            android:padding="8dp"
            android:layout_width="wrap_content"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:onClick="@{() -> callback.onTitleClick()}"
            android:textColor="@color/white"
            android:textSize="@dimen/header"
            android:layout_margin="@dimen/bread_margin"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/settings_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="32dp"
            android:adapter="@{adapter}"/>

    </LinearLayout>

</layout>