<?xml version="1.0" encoding="utf-8"?>
<layout>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_write_down"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textDirection="locale"
        tools:context="io.digibyte.presenter.activities.intro.WriteDownActivity">

        <FrameLayout
            android:id="@+id/gradient_layout"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/write_down_gradient">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/bread_margin"
                android:text="@string/SecurityCenter.paperKeyTitle"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/header"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="80dp"
                android:background="@drawable/ic_paper_phrase"
                android:elevation="8dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="32dp"
                android:layout_marginTop="78dp"
                android:background="@drawable/ic_pen"
                android:elevation="8dp"/>

            <ImageButton
                android:id="@+id/close_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/bread_margin"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_close_white_24dp"/>


        </FrameLayout>

        <io.digibyte.presenter.customviews.BRText
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gradient_layout"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/bread_margin"

            android:layout_marginTop="51dp"
            android:lineSpacingMultiplier="1.3"
            android:text="@string/StartPaperPhrase.body"
            android:textColor="@color/white"
            android:textSize="18sp"/>

        <Button
            android:id="@+id/button_write_down"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="24dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/intro_create_button"
            android:foreground="?android:attr/selectableItemBackground"
            android:padding="32dp"
            android:text="@string/StartPaperPhrase.buttonTitle"
            android:textColor="@color/white" />

    </RelativeLayout>
</layout>