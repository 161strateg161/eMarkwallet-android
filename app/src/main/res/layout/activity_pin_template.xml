<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="data"
            type="io.digibyte.presenter.activities.models.PinActivityModel"/>

    </data>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_intro_set_pit"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textDirection="locale"
        android:orientation="vertical"
        tools:context="io.digibyte.presenter.activities.SetPinActivity">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="@dimen/bread_margin"
            android:text="@string/UpdatePin.createTitle"
            android:textColor="@color/white"
            android:textSize="@dimen/header"/>

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:lineSpacingMultiplier="1.3"
            android:text="@string/UpdatePin.createInstruction"
            android:textColor="@color/white"
            android:textSize="@dimen/sub_header"/>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:lineSpacingMultiplier="1.3"
            android:textColor="@color/white"
            android:text="@string/UpdatePin.caption"
            android:textSize="16sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/pinLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <View
                    android:id="@+id/dot1"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_marginEnd="4dp"/>

                <View
                    android:id="@+id/dot2"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_marginEnd="4dp"/>

                <View
                    android:id="@+id/dot3"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_marginEnd="4dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/pinLayout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <View
                    android:id="@+id/dot4"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_marginEnd="4dp"/>

                <View
                    android:id="@+id/dot5"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_marginEnd="4dp"/>

                <View
                    android:id="@+id/dot6"
                    android:layout_width="75dp"
                    android:layout_height="75dp"/>
            </LinearLayout>

        </LinearLayout>

        <io.digibyte.presenter.customviews.BRKeyboard
            android:id="@+id/brkeyboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:showAlphabet="false"
            app:setBRButtonTextColor="@{data.keyboardTextColor}"/>

    </LinearLayout>

</layout>

