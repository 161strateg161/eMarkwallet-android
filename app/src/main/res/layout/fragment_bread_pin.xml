<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.text.TextUtils"/>
        <import type="android.view.View"/>
        <variable name="callback"
                  type="io.digibyte.presenter.fragments.interfaces.PinFragmentCallback"/>
        <variable name="data" type="io.digibyte.presenter.fragments.models.PinFragmentViewModel"/>
    </data>

    <io.digibyte.presenter.customviews.BRLinearLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:fitsSystemWindows="true"
        android:filterTouchesWhenObscured="true"
        android:onClick="@{() -> callback.onCancelClick()}"
        android:orientation="vertical"
        tools:context="io.digibyte.presenter.activities.LoginActivity">

        <FrameLayout android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
            <LinearLayout
                android:id="@+id/dialogLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:layout_gravity="center"
                android:layout_marginStart="24dp"
                android:background="@drawable/pin_round_corner"
                android:clickable="true"
                android:focusable="true"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="16dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/pinLayout"
                        android:layout_width="wrap_content"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <View
                            android:id="@+id/dot1"
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:layout_marginEnd="4dp"/>

                        <View
                            android:id="@+id/dot2"
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:layout_marginEnd="4dp"/>

                        <View
                            android:id="@+id/dot3"
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:layout_marginEnd="4dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/pinLayout2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <View
                            android:id="@+id/dot4"
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:layout_marginEnd="4dp"/>

                        <View
                            android:id="@+id/dot5"
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:layout_marginEnd="4dp"/>

                        <View
                            android:id="@+id/dot6"
                            android:layout_width="75dp"
                            android:layout_height="75dp"/>
                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginBottom="12dp"
                    android:text="@{data.title}"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:visibility="@{TextUtils.isEmpty(data.title) ? View.GONE : View.VISIBLE}"/>

                <TextView
                    android:id="@+id/message"
                    android:layout_width="match_parent"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="18dp"
                    android:layout_marginStart="18dp"
                    android:layout_marginBottom="12dp"
                    android:text="@{data.message}"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:visibility="@{TextUtils.isEmpty(data.message) ? View.GONE : View.VISIBLE}"/>

            </LinearLayout>
        </FrameLayout>


        <io.digibyte.presenter.customviews.BRKeyboard
            android:id="@+id/brkeyboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:clickable="true"
            android:focusable="true"
            app:addOnInsertListener="@{callback}"
            app:setBRButtonTextColor="@{data.keyboardTextColor}"
            app:setShowDot="@{false}"/>

    </io.digibyte.presenter.customviews.BRLinearLayout>

</layout>
